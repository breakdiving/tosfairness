        <%= f.text_area :rating_10_note, :class => "form-control", :placeholder => "Enter Note", :row => 4 %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :rating_14, "Public Placement of TOS Rating Badge", :class => "col-6 col-form-label" %>
      <div class="col-2">
        <%= f.select(:rating_14, ContractRevision::BADGES, {}, {class: 'form-control'}) %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :additional_note, :class => "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :additional_note, :class => "form-control", :placeholder => "Enter additional note", :row => 3 %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :ways_to_improve, :class => "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :ways_to_improve, :class => "form-control", :placeholder => "Enter ways to improve", :row => 3 %>
      </div>
    </div>
    <%= f.submit "Save", :class => "btn btn-primary" %>
  <% end %>
</div>
