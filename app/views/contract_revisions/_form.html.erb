        <%= f.select(:rating_3, options_for_select(ContractRevision::SCORES, f.object.rating_3), {}, {class: 'form-control'}) %>
      </div>
      <div class="col-4">
        <%= f.text_area :rating_3_note, :class => "form-control", :placeholder => "Enter Note", :row => 4 %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :rating_4, "The Right to Due Process", :class => "col-4 col-form-label" %>
      <div class="col-2">
        <%= f.select(:rating_4, options_for_select(ContractRevision::SCORES,f.object.rating_4), {}, {class: 'form-control'}) %>
      </div>
      <div class="col-4">
        <%= f.text_area :rating_4_note, :class => "form-control", :placeholder => "Enter Note", :row => 4 %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :rating_5, "The Right to No Hidden Terms or Fees", :class => "col-4 col-form-label" %>
      <div class="col-2">
        <%= f.select(:rating_5, options_for_select(ContractRevision::SCORES,f.object.rating_5), {}, {class: 'form-control'}) %>
