<div class="col-md-10 col-sm-12">
  <%= form_for ([@contract,@contract_revision]) do |f| %>
    <% if contract_revision.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h3><%= pluralize(contract_revision.errors.count, "error") %> prohibited this contract version from being saved:</h3>
        <ul>
          <% contract_revision.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= render 'contract_detail' %>
    <div class="form-group row">
      <%= f.label :contract_date, "Date", :class => "col-2 col-form-label" %>
      <div class="col-5">
        <%= f.text_field :contract_date, value: @contract_revision.contract_date.try(:strftime, '%m/%d/%Y'), data:{ provide:'datepicker' }, :class => "form-control", :placeholder => "Enter Contract Date" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :tos_url, "URL of TOS", :class => "col-2 col-form-label" %>
      <div class="col-5">
        <%= f.text_field :tos_url, :class => "form-control", :placeholder => "Direct URL to TOS: Optional" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :rating_1, "The Right to Sue", :class => "col-md-4 col-sm-5 col-form-label" %>
      <div class="col-2">
        <%= f.select(:rating_1, options_for_select(ContractRevision::SCORES, f.object.rating_1), {}, {class: 'form-control'}) %>
      </div>
      <div class="col-md-4 col-sm-6">
        <%= f.text_area :rating_1_note, :class => "form-control", :placeholder => "Enter Note", :row => 4 %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :rating_2, "The Right to Low-Cost Arbitration", :class => "col-4 col-form-label" %>
      <div class="col-2">
        <%= f.select(:rating_2, options_for_select(ContractRevision::SCORES, f.object.rating_2), {}, {class: 'form-control'}) %>
      </div>
      <div class="col-4">
        <%= f.text_area :rating_2_note, :class => "form-control", :placeholder => "Enter Note", :row => 4 %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :rating_3, "The Right to a Class Action", :class => "col-4 col-form-label" %>
