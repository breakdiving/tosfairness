<div class="container pt-5">
  <%= form_for @contract do |f| %>
    <div class="form-group">
      <%= f.label :company_name, "Company Name" %>
      <%= f.text_field :company_name, :class => "form-control", :placeholder => "Enter Company Name" %>
    </div>
    <div class="form-group">
      <%= f.label :website, "Website" %>
      <%= f.text_field :website, :class => "form-control", :placeholder => "Enter URL" %>
    </div>
    <div class="form-group">
      <%= f.label :rating_1, "Rating 1" %>
      <%= f.text_field :rating_1, :class => "form-control", :placeholder => "Enter Rating 1" %>
    </div>
    <div class="form-group">
      <%= f.label :rating_2, "Rating 2" %>
      <%= f.text_field :rating_2, :class => "form-control", :placeholder => "Enter Rating 2" %>
    </div>
    <div class="form-group">
      <%= f.label :rating_3, "Rating 3" %>
      <%= f.text_field :rating_3, :class => "form-control", :placeholder => "Enter Rating 3" %>
    </div>
    <div class="form-group">
      <%= f.label :rating_4, "Rating 4" %>
      <%= f.text_field :rating_4, :class => "form-control", :placeholder => "Enter Rating 4" %>
    </div>
    <div class="form-group">
      <%= f.label :rating_1, "Rating 5" %>
      <%= f.text_field :rating_1, :class => "form-control", :placeholder => "Enter Rating 5" %>
    </div>
    <%= f.submit "Add", :class => "btn btn-primary" %>
  <% end %>
</div>
