        <%= f.select(:rating_1, Contract::SCORES, {}, {class: 'form-control'}) %>
      </div>
      <div class="col-md-4 col-sm-6">
        <%= f.text_area :rating_1_note, :class => "form-control", :placeholder => "Enter Note", :row => 4 %>
      </div>
    </div>
